<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="@color/colorAzur">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="320dp">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="260dp"
                android:background="@drawable/gradient1"
                android:orientation="vertical">

            <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="35dp"
                    android:src="@drawable/icondaun"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:id="@+id/nama_member"
                    android:textColor="#fff"
                    android:textSize="19sp"
                    android:textStyle="bold"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/kode_member"
                    android:textColor="#fff"
                    android:textSize="20sp"/>
        </LinearLayout>

        <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="115dp"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="75dp"
                android:layout_marginTop="190dp"
                app:cardBackgroundColor="@color/colorWhite"
                app:cardCornerRadius="15dp">

            <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/saldoMember"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="10dp"
                        app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                />
                <LinearLayout
                        android:layout_width="278dp"
                        android:layout_height="65dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:weightSum="3" app:layout_constraintTop_toBottomOf="@+id/saldoMember"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent">

                    <LinearLayout
                            android:layout_width="55dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Poin"
                                android:textSize="18sp"/>

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingTop="10dp"
                                android:id="@+id/poin"
                                android:textColor="@color/colorAccent"
                                android:textSize="18sp"
                                android:textStyle="bold"/>
                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="55dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Transaksi"
                                android:textSize="18sp"/>

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingTop="10dp"
                                android:text="12"
                                android:id="@+id/trns"
                                android:textColor="@color/colorAccent"
                                android:textSize="18sp"
                                android:textStyle="bold"/>
                    </LinearLayout>
                </LinearLayout>
            </android.support.constraint.ConstraintLayout>
        </android.support.v7.widget.CardView>

    </RelativeLayout>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical">

            <LinearLayout
                    android:orientation="horizontal"
                    android:paddingLeft="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_phone_black_24dp"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/noTelp"
                        android:textStyle="bold"
                        android:layout_gravity="center_vertical"
                        android:paddingLeft="20dp"/>

            </LinearLayout>

            <LinearLayout
                    android:orientation="horizontal"
                    android:paddingLeft="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_assignment_ind_black_24dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ktp"
                    android:textStyle="bold"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="20dp"/>

                <TextView
                        android:id="@+id/verified"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(Id Terverifikasi)"
                        android:textColor="@color/colorAccent"
                        android:textStyle="bold"
                        android:layout_gravity="center_vertical"
                        android:paddingLeft="10dp"/>
            </LinearLayout>

            <LinearLayout
                    android:orientation="horizontal"
                    android:paddingLeft="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_date_range_black_24dp"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tglLahir"
                        android:textStyle="bold"
                        android:layout_gravity="center_vertical"
                        android:paddingLeft="20dp"/>
            </LinearLayout>

            <LinearLayout
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:paddingLeft="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_location_on_black_24dp"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/kota"
                        android:textStyle="bold"
                        android:layout_gravity="center_vertical"
                        android:paddingLeft="20dp"/>
            </LinearLayout>

            <LinearLayout
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:paddingLeft="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_person_pin_black_24dp"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/leader"
                        android:textStyle="bold"
                        android:layout_gravity="center_vertical"
                        android:paddingLeft="20dp"/>
            </LinearLayout>
            <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:text="Data Transaksi Saya"
                    android:textSize="14sp"
                    android:textColor="#fff"
                    android:id="@+id/DataTransaksi"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/buttonstyle"/>
            <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:text="Daftar Kontak"
                    android:textSize="14sp"
                    android:textColor="#fff"
                    android:onClick="kontakSaya"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/buttonstyle"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>